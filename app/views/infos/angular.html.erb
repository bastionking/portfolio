<h1>Angular Portfolio Item</h1>

<%= link_to "Create new item", new_info_path %>
<% @angular_portfolio_items.each do |portfolio_item| %>
<p><%= link_to portfolio_item.title, info_show_path(portfolio_item)%></p>
<p><%= portfolio_item.subtitle%></p>
<p><%= portfolio_item.body%></p>
<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>

<%= link_to "Edit", edit_info_path(portfolio_item) %>
<%= link_to "Delete", info_path(portfolio_item), method: :delete, data: {confirm: 'Are you sure?' }  %>


<% end %>
